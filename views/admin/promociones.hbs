<div class="row">
    <div class="col-7 text-right">
        <h3>Listado de Promociones</h3>
    </div>
    <div class="col-2 text-right">
        <a href="/admin/promociones/agregar" class="btn btn-success">
            <i class="fa-thin fa-plus"></i>Nuevo</a>
    </div>
    <div class="col-2 text-right">
        <form class="form-inline my-2 my-lg-0" action="/admin/promociones" method="get">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="
        Search" name="q" {{#if q}} value="{{q}}" {{/if}}>
            <button class="btn btn-primary" type="submit"> <i class="fa fa-search"></i></button>
        </form>
    </div>

</div>
{{!---fin fila1---}}
{{!---inicio fila2---}}
<div class="row">
    <div class="col">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">titulo</th>
                    <th scope="col">info</th>
                    <th scope="col">acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each promociones}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{titulo}}</td>
                    <td>{{info}}</td>
                    <td class="text-right">
                        <a href="/admin/promociones/modificar/{{id}}" class="btn btn-sm btn-secondary"><i
                                class="fa fa-pencil"></i></a>

                        <a href="/admin/promociones/eliminar/{{id}}" class="btn btn-sm btn-secondary"><i
                                class="fa fa-trash"></i></a>

                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{#if is_search}}
        {{#unless promociones.length}}
        No se han encontrado resultados para "<b>{{q}}</b>"
        {{/unless}}
        {{/if}}
    </div>
</div>